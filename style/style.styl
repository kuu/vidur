$text-grid = 4px;
$color-accent = $clr-pink-500;

*
  box-sizing: border-box;
  transition: 150ms ease-out;

html
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;

body
  margin: 0 auto;
  padding: 0;
  
  width: 100%;
  height: 100%;
  
  //color: blackTextColor(.54);
  font-size: 14px;
  line-height: 1em;
  
  font-family: 'Noto Sans', sans-serif;

input
  font-size: 20px;
  padding: $text-grid;
  border-style: none;
  border-bottom: solid 1px rgba(#000, 0.5);
  width: 70%;
  max-width: 500px;

input:hover
  border-bottom-color: $color-accent;

input:focus
  outline: none;
  border-bottom: solid 2px $color-accent;
